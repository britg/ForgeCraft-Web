
<div id="register-content">
  <h2>Create an Account</h2>

  <div id="register-form" class="inset">
    <div class="col-content">
      <% resource.build_player %>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.fields_for :player do |p| %>

          <%= p.hidden_field :level, :value => 1 %>
          <%= p.hidden_field :zone_id, :value => Zone.first.try(:id) %>

          <div><%= p.label :name, "Player Name" %><br />
          <%= p.text_field :name, :class => "required" %></div>
        <% end %>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, :class => "required email" %></div>

        <div><%= f.label :password %><br />
        <%= f.password_field :password, :class => "required" %></div>

        <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, :class => "required" %></div>

        <div><%= f.submit "Sign up" %></div>
      <% end %>

      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>