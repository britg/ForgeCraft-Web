#forge

  #sidebar
    %h3= @forge

    .progress-wrap
      = render "forges/progress", :forge => @forge
    
    #event-list

      - @forge.events.each do |event|
        = render "events/#{event.type}"

  - if @forge.complete? and @forge.requires_funding?
    #complete
      (Placeholder) This forge is complete
  - else
  
    #ores


  = render "active_forge"

:javascript
  ForgeCraft.Config.forge = #{@forge.to_json}
  ForgeCraft.Config.ores = #{Ore.tile_urls.to_json}
  ForgeCraft.Config.loot = #{@loot.to_json}

#loot-template
  = render "items/loot", :loot => Loot.new(:attack => 1, :defense => 1)