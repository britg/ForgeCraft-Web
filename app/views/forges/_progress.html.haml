.progress

  .funds
    %span.stat Funds:
    %span.amount
      - if forge.requires_funding?
        = number_with_delimiter(forge.funds)
      - else
        %span.infinite &#8734;
      = image_tag "coin.png", :class => "icon"

  .percent
    %span.amount= forge.progress_percent
    = "% complete"

  .requirements

    %ul
      - forge.progresses.each do |prog|
        %li
          = prog
          = "complete" if prog.complete?

  - if forge.try(:complete?)
    
    %h3 Complete!

  .bar