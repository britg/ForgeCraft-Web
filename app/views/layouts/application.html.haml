!!!
%html
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= @browser_title || 'ForgeCraft'

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{ :class => params[:controller] }

    #head
      
      #branding
        = link_to image_tag("logox300.png", :id => "logo"), root_path


      #actions

        #profile

          - if current_user.present?
            
            .welcome
              Welcome, #{current_user}
              = link_to "Log out", logout_path, :class => "log-out"

          - else

            = link_to "Log in", login_path
            or
            = link_to "Create an Account"

        .clear

        %ul#navigation
          %li
            = link_to "Armory", armory_index_path
          %li
            = link_to "Forums", topics_path

    #content
      - if flash.any?
        - for key, msg in flash
          %p{ :class => key }= msg
    
      = yield

    #footer
      
    
