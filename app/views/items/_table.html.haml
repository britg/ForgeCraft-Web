
%table.item-table
  
  %thead
    %tr
      %th Name

      %th Lvl Req

      %th
        - if @class.weapon?
          Attack Min
        - else
          Defense Min
      
      %th
        - if @class.weapon?
          Attack Max
        - else
          Defense Max

      - if admin?
        %th

  %tbody

    - for item in items

      %tr
        %td.item-name
          = link_to item, item_path(item), :class => item.rarity

        %td
          = admin_field item, :level

        %td
          - if item.weapon?
            = admin_field item, :attack_min
          - else
            = admin_field item, :attack_max

        %td
          - if item.weapon?
            = admin_field item, :attack_max
          - else
            = admin_field item, :defense_max

        - if admin?
          %td
            = link_to "Edit", edit_armory_item_path(@class, item), :rel => "modal"
            |
            = link_to "Delete", armory_item_path(@class, item), :confirm => "Really delete?", :method => :delete, :remote => true
